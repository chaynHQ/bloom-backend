{
  "name": "bloom-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:staging": "node -r newrelic dist/src/main --optimize_for_size --max_old_space_size=460 --gc_interval=100",
    "start:prod": "node -r newrelic dist/src/main --optimize_for_size --max_old_space_size=460 --gc_interval=100",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "bash ./staging_backup.sh -c",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "yarn typeorm -- -d ./src/typeorm.config.ts migration:generate ./src/migrations/bloom-backend",
    "migration:run": "yarn typeorm migration:run -- -d ./src/typeorm.config.ts",
    "migration:revert": "yarn typeorm -- -d ./src/typeorm.config.ts migration:revert",
    "migration:show": "yarn build && yarn typeorm -- migration:show"
  },
  "dependencies": {
    "@mailchimp/mailchimp_marketing": "^3.0.80",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.2",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.12",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.9.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "crisp-api": "^9.10.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "firebase": "^11.8.1",
    "firebase-admin": "^13.4.0",
    "lodash": "^4.17.21",
    "nestjs-cls": "^5.4.3",
    "newrelic": "^12.20.0",
    "pg": "^8.16.0",
    "pg-connection-string": "^2.7.0",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^6.0.1",
    "rollbar": "^2.26.4",
    "rxjs": "^7.8.1",
    "storyblok-js-client": "^6.10.6",
    "typeorm": "^0.3.24",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@golevelup/ts-jest": "^0.7.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^10.4.15",
    "@types/date-fns": "^2.6.0",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4.17.14",
    "@types/node": "^22.15.19",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": "22.x",
    "yarn": "1.x"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testPathIgnorePatterns": [
      "src/migrations",
      "dist",
      "coverage"
    ]
  }
}
