{
  "name": "bloom-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:stag": "NODE_ENV=staging nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/src/main",
    "start:heroku": "node -r newrelic dist/src/main --optimize_for_size --max_old_space_size=460 --gc_interval=100",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "bash ./staging_backup.sh -c",
    "migration:generate": "yarn typeorm -- -d ./typeorm.config.ts migration:generate ./migrations/bloom_backend",
    "migration:run": "yarn typeorm migration:run -- -d ./typeorm.config.ts",
    "migration:revert": "yarn typeorm -- -d ./typeorm.config.ts migration:revert",
    "migration:show": "yarn build && yarn typeorm -- migration:show",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:run-migrations": "yarn typeorm migration:run -- -d ./typeorm.config.ts",
    "typeorm:generate-migration": "yarn typeorm -- -d ./typeorm.config.ts migration:generate ./migrations/$NAME",
    "typeorm:create-migration": "yarn typeorm -- migration:create ./migrations/$NAME",
    "typeorm:revert-migration": "yarn typeorm -- -d ./typeorm.config.ts migration:revert"
  },
  "dependencies": {
    "@mailchimp/mailchimp_transactional": "^1.0.47",
    "@nestjs/common": "^10.3.6",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.6",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.6.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^2.30.0",
    "dotenv": "^16.4.5",
    "firebase": "^9.4.1",
    "firebase-admin": "^10.0.0",
    "lodash": "^4.17.21",
    "newrelic": "^11.8.0",
    "pg": "^8.11.5",
    "pg-connection-string": "^2.6.4",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "rollbar": "^2.24.0",
    "rxjs": "^7.8.1",
    "storyblok-js-client": "^4.2.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.3.2",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.6",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.176",
    "@types/node": "^20.12.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^27.0.6",
    "prettier": "^3.2.5",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.4"
  },
  "engines": {
    "node": "20.x",
    "yarn": "1.x"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testPathIgnorePatterns": [
      "src/migrations",
      "dist",
      "coverage"
    ]
  }
}
